{
  "name": "htmlgoddess",
  "version": "0.0.0",
  "description": "## This is Alpha. Use at your own risk. Feedback/PRs Welcome",
  "private": false,
  "scripts": {
    "start": "ntl",
    "print": "webpack",
    "autoprint": "onchange 'src/' -- webpack",
    "save": "git commit -am 'saving work'",
    "publish": "git push origin",
    "serve": "node server",
    "format": "prettier src/ --write",
    "autoformat": "onchange 'src/**/*.html'  'src/**/*.css' -- prettier {{changed}} --write",
    "proofread": "textlint 'src/**/*.html' 'src/**/*.htm'",
    "a11y": "node a11y",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonascript/htmlgoddess.git"
  },
  "keywords": [
    "html"
  ],
  "author": "Jonathan Crockett",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jonascript/htmlgoddess/issues"
  },
  "htmlgoddess": {
    "output": "/docs",
    "livereload": true
  },
  "textlint": {
    "plugins": [
      "html"
    ],
    "rules": {
      "@textlint-rule/no-dead-link": {
        "checkRelative": true,
        "baseURI": "http://localhost:3000",
        "severity": "warning"
      },
      "textlint-rule-rousseau": {
        "ignoreTypes": [
          "sentence:uppercase",
          "weasel"
        ],
        "severity": "warning",
        "showLevels": [
          "error"
        ]
      },
      "textlint-rule-spellchecker": true
    }
  },
  "homepage": "https://github.com/jonascript/htmlgoddess#readme",
  "devDependencies": {
    "@textlint-rule/textlint-rule-no-dead-link": "3.2.0",
    "@webpack-cli/serve": "0.2.0",
    "clean-webpack-plugin": "3.0.0",
    "command-line-args": "5.1.1",
    "copy-webpack-plugin": "6.0.1",
    "css-loader": "3.5.3",
    "glob": "7.1.6",
    "html-beautify-webpack-plugin": "1.0.5",
    "html-loader": "1.1.0",
    "html-replace-webpack-plugin": "2.5.6",
    "html-to-text": "5.1.1",
    "html-webpack-plugin": "4.3.0",
    "livereload": "0.9.1",
    "mini-css-extract-plugin": "0.9.0",
    "ntl": "5.0.0",
    "onchange": "7.0.2",
    "pa11y": "5.3.0",
    "prettier": "2.0.5",
    "pretty": "2.0.0",
    "style-loader": "1.2.1",
    "textlint": "11.6.3",
    "textlint-plugin-html": "0.2.0",
    "textlint-rule-ginger": "2.2.1",
    "textlint-rule-rousseau": "1.4.6",
    "textlint-rule-spellchecker": "2.2.1",
    "textlint-rule-terminology": "2.1.4",
    "wcag-validator": "5.0.0",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.11.0",
    "webpack-fix-style-only-entries": "0.5.0",
    "webpack-livereload-plugin": "2.3.0"
  },
  "dependencies": {
    "postcss-loader": "3.0.0",
    "serve": "11.3.1",
    "spellchecker": "3.7.0"
  },
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  }
}